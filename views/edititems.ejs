<%- include("partials/header"); -%>

<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
            <h3 class="text-dark mb-0">Dashboard</h3>
        </nav>



        <div class="container-lg shadow p-3 mb-3 bg-white rounded">
            <form action="/edititems" method="POST">

                <div class="form-group">
                        <input type="hidden" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter Item ID" name="itemID" value=<%=data.itemId %>>


                    <div class="m-4">
                        <label for="exampleInputEmail1">Item Name</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter Item Name" name="itemname" value='<%=data.itemName %>' required>
                    </div>

                    <div class="m-4">
                        <label for="exampleInputEmail1">CategoryID</label>
                        <!-- <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter categoryId" name="categoryId" value=<%=data.category.categoryId %>> -->


                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="categoryId" required>

                            <% category.forEach(item => {  %>

                            <% if(data.category.categoryId === item.categoryId) { %>
                            <option value=<%= item.categoryId %> selected> <%= item.categoryName %></option>

                            <% } 
                            else{ %>

                            <option value=<%= item.categoryId %>> <%= item.categoryName %></option>

                            <% } %>



                            <%}) %>


                        </select>
                    </div>


                    <div class="m-4">
                        <label for="exampleInputEmail1">Item Description</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter Item Description" name="itemdescription" value='<%=data.itemDescription %>' required>
                    </div>


                    <div class="m-4">
                        <label for="exampleInputEmail1">Item Price</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter Item Price" name="itemprice" value='<%=data.itemPrice %>' required>
                    </div>


                    <button type="submit" class="btn btn-primary ml-4">Submit</button>

            </form>
        </div>



    </div>

</div>













