<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
            <h3 class="text-dark mb-0">Table Dashboard</h3>
        </nav>



        <div class="container-lg shadow p-3 mb-5 bg-white rounded">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-8">
                                <h2>Table Details</h2>
                            </div>
                            <div class="col-sm-4">
                                <a type="button" class="btn btn-info add-new" href="/tables/add"><i
                                        class="fa fa-plus"></i>
                                    Add
                                    New</a>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Table ID</th>
                                <th>Table Capacity</th>
                                <th>Is Occupied</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% table.forEach(element => { %>

                            <tr>
                                <td><%= element.tableId %> </td>
                                <td><%= element.tableCapacity %></td>
                                <% if(element.occupied == 1){ %>
                                    <td><%= "Yes" %></td>
                                <%}
                                else{ %>
                                    <td><%= "No" %></td>
                                <% }%>
                                <td>
                                    <a class="" title="Edit" data-toggle="tooltip"
                                        href=<%= "/tables/edit?id="+ element.tableId %>> <i class="material-icons"
                                            style="color:#FFC107;">&#xE254;</i></a>

                                    <a class="" title="Delete" data-toggle="tooltip"
                                        href=<%= "/tables/delete?id="+ element.tableId %>><i class="material-icons"
                                            style="color:red;">
                                            &#xE872;</i></a>
                                </td>
                            </tr>

                            <% }); %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        </table>




    </div>

</div>

</div>













